<%= render 'layouts/home_carousel' %>
<div class="home">  
  <section class="category-block">
    <a href="store/apluso" class="category">
      <img src="assets/img/clothing.png" alt="clothing" />
    </a>
    <a href="store/madihajaipur" class="category">
      <img src="assets/img/jewellery.png" alt="jewellery" />
    </a>
    <a href="store/wealdheritage" class="category">
      <img src="assets/img/decor.png" alt="decor" />
    </a>
    <a href="store/wealdheritage" class="category">
      <img src="assets/img/arts.png" alt="arts" />
    </a>
  </section>
  <section class="featured-stores">
    <p class="heading-text">Featured Stores</p>
    <div class="row">
      <div class="left-section col-md-6">
        <a href="store/thelocalbookhoarders">
          <div class="primary-store">
            <img src="https://cdn.myshopmatic.com/images/2QJYW6/v8Z3oKRgNn.jpg" alt="The Local Book Hoarders" />
