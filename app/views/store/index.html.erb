<div class="store">
  <%= render 'layouts/masthead' %>
  
  <section class="products">
  <% @products.each do |p| %>
    <div class="col-md-3">
      <%= link_to "/redirect_to_store.html?url=https://#{@merchant.canonical_name}.myshopmatic.com/products/#{p.slug}&store=#{@merchant.name}", :target => "_blank" do%>      
        <div class="product" data-toggle="modal" data-target="#product-<%= p.id %>">
          <img alt="img" src="<%= p_image(p.image_1) %>" />
          <p class="name"><%=p.name%></p>
          <p class="price"> <%=@merchant.currency_code%> <%=p.price%></p>
        </div>
      <% end %>
    </div>    
    <%= render 'products/product_popup', :product => p %>
    <% end %>    
  </section>
</div>

