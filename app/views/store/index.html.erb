<div class="store">
  <%= render 'layouts/masthead' %>
  
  <section class="products">
  <% @products.each do |p| %>
    <div class="col-md-3">
      <div class="product" data-toggle="modal" data-target="#product-<%= p.id %>">
        <img alt="img" src="<%=p.image_1%>" />
        <p class="name"><%=p.name%></p>
        <p class="price"> <%=@merchant.currency_code%> <%=p.price%></p>
      </div>    
    </div>    
    <%= render 'products/product_popup', :product => p %>
    <% end %>    
    
  </section>

  
</div>

